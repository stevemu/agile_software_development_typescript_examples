{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
